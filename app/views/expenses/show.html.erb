<% unless notice.nil? %>
	<div id="notice" class="alert alert-success alert-dismissible" role="alert">
	 	<button type="button" class="close" data-dismiss="alert">
	 		<span aria-hidden="true">&times;</span>
	 		<span class="sr-only">Close</span>
	 	</button>
		<%= notice %>
	</div>
<% end %>

<h1>Expense details</h1>

<p>
  <strong>Date:</strong>
  <%= @expense.date.strftime('%-d %b %Y') %>
</p>

<p>
  <strong>Categories:</strong>
  <%= @expense.expense_categories.collect{ |x| x.name }.join(', ') %>
</p>

<p>
  <strong>Description:</strong>
  <%= @expense.description %>
</p>

<p>
  <strong>Amount:</strong>
  <%= number_to_currency(@expense.amount) %>
</p>
<br/>
<%= link_to 'Edit', edit_expense_path(@expense) %> |
<%= link_to 'Back', expenses_path %>
