<div class="row">
  <div class="col-md-5">
    <h1>Categories</h1>
    <%= link_to 'New Category', new_expense_category_path %>
    <br/><br/>
    
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
        </tr>
      </thead>
    
      <tbody>
        <% @expense_categories.each do |expense_category| %>
          <tr onclick="location.href='<%= edit_expense_category_path(expense_category) %>';">
            <td><%= expense_category.name %></td>
          </tr>    
        <% end %>    
      </tbody>    
    </table>
  </div>
</div>